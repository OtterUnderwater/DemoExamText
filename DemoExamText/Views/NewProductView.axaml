<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DemoExamText.Views.NewProductView"
			 xmlns:vm="using:DemoExamText.ViewModels"
			 x:DataType="vm:NewProductViewModel">
	
	<Grid>
		<StackPanel>
			<TextBox Text="{Binding Tour.Name}"/>
			<NumericUpDown Value="{Binding Tour.TicketCount}" Minimum="0" Increment="0.1"/>
			<TextBox Text="{Binding Tour.Description}" TextWrapping="Wrap"/>
			<NumericUpDown Value="{Binding Tour.Price}" Minimum="0" Increment="1"/>
			<Button Content="Сохранить изменения" Command="{Binding Save}"/>
		</StackPanel>
	</Grid>
</UserControl>
